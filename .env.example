# ========================================
# TrueNAS + FTP System Configuration
# Copy this file to .env and fill in your values.
# ========================================

# --- System Information ---
# Environment can be 'development' or 'production'
ENVIRONMENT=production
# Example: Europe/Paris, America/New_York
TIMEZONE=UTC
LOG_LEVEL=INFO
# This will be the project name for Docker Compose
COMPOSE_PROJECT_NAME=truenas_ftp_system

# --- Security - IMPORTANT ---
# Change these to strong, unique passwords
TRUENAS_ADMIN_PASSWORD=
TRUENAS_ROOT_PASSWORD=
POSTGRES_PASSWORD=
REDIS_PASSWORD=
GRAFANA_PASSWORD=

# --- FTP Configuration ---
FTP_HOST=
FTP_USER=
FTP_PASS=
FTP_PORT=21
FTP_PASSIVE=true
FTP_SSL=false

# --- Performance Settings ---
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_SPEED_LIMIT=0
PARALLEL_TRANSFERS=2
CHUNK_SIZE=8192

# --- Service Configuration ---
SYNC_INTERVAL=1800
MONITOR_INTERVAL=60
ARCHIVE_DAYS=7
CLEANUP_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# --- Network Configuration ---
# The subnet for the internal Docker network
TRUENAS_SUBNET=172.20.0.0/16
# External ports for services
DASHBOARD_PORT=8080
TRUENAS_WEB_PORT=80
TRUENAS_HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# --- Storage Configuration ---
# Example: 100G, 500M
MAX_ARCHIVE_SIZE=100G
COMPRESSION_ENABLED=true
DEDUPLICATION_ENABLED=true

# --- Monitoring & Alerts ---
METRICS_RETENTION=15d
ALERT_EMAIL=
WEBHOOK_NOTIFICATIONS=false
# Example: https://hooks.slack.com/services/XXX/YYY/ZZZ
ALERT_WEBHOOK_URL=

# --- SSL Configuration ---
# Set to true to enable SSL, requires cert.pem and private.key in config/ssl/
SSL_ENABLED=false
